<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo or Icon above the login form -->

        <!-- Username Field -->

        <!-- Password Field -->

        <!-- Login Button -->

        <ImageView
            android:id="@+id/logo"
            android:layout_width="182dp"
            android:layout_height="148dp"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/username"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/edit_text"
            android:hint="Số đện thoại"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#090909" />

        <EditText
            android:id="@+id/password"
            android:layout_width="396dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/username"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/edit_text"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="#090909" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="173dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/selected_tab"
            android:padding="16dp"
            android:text="Đăng nhập"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="495dp"
            android:text="Quên mật khẩu"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="525dp"
            android:text="Bạn chưa là thành viên ?"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/dangkyngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="525dp"
            android:text="Đăng ký ngay"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="Đăng nhập"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="235dp"
            android:shadowColor="#040404"
            android:text="Số điện thoại của bạn"
            android:textColor="#000000"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="327dp"
            android:text="Mật khẩu"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="249dp"
            android:layout_height="41dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="428dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/gg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fb" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ip" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>